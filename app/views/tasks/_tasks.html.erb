<ul class="list-group tasklist">
    <% task_list.each do |task| %>
      
      <li class="list-group-item tasklist-item">
          <%= check_box_tag "task_ids[]", task.id %>
          <%= link_to task.title, task %>
          <span class="badge"><%= task.due_date %></span>
          <span class="badge"><%= task.completed %></span>
          <div class="tasklist-item__mod-buttons">
            <%= link_to task, method: :delete,
                              data: { confirm: "You sure?" }, class: 'btn btn-small btn-danger' do %>
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                              <% end %>
                                  
            <%= link_to edit_task_path(task), class: 'btn btn-small btn-success' do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </div>
      </li>
      
    <% end %>
</ul>