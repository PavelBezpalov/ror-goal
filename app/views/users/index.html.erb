<h1>Tasks</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <%= form_for(@task) do |f| %>
                
                  <% if @task.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this @tasks from being saved:</h2>
                      
                      <ul>
                      <% @task.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                
                  <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                  </div>
        
                <%= f.submit 'Create task', :class => 'button right' %>
                
                <% end %>
            </div>
            <div class="col-md-6">
                <% @tasks.each do |task| %>
                    <h3><%= task.title %></h3>
                    <p><%= task.description %></p>
                <% end %>
            </div>
        </div>
    </div>