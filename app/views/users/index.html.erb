<h1>Tasks</h1>
<div class="row">
    <div class="col-md-6">
        <%= form_for(@task) do |f| %>
        
          <% if @task.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@task.errors.count, "error") %> prohibited this @tasks from being saved:</h2>
              
              <ul>
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
    
          <div class="form-group">
            <%= f.label :due_date %>          
            <%= f.date_field :due_date, class: 'form-control' %>
          </div>

        <%= f.submit 'Create task', :class => 'btn btn-primary' %>
        
        <% end %>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
            <% @tasks.each do |task| %>
              <li class="list-group-item">
                  <%= check_box_tag "task_ids[]", task.id %>
                  <%= link_to task.title, task %>
                  <span class="badge"><%= task.due_date %></span>
                  <%= link_to "delete", task, method: :delete,
                                        data: { confirm: "You sure?" }, class: 'btn btn-small btn-danger pull-right' %>
              </li>
            <% end %>
        </ul>
    </div>
</div>