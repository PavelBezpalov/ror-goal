<h1>Goal</h1>

<div class="row">
  <div class="col-md-12">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      Create new task
    </button>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Completed Tasks</h3>
      <%= render 'tasks/tasks', task_list: @tasks_completed %>
  </div>
  <div class="col-md-6">
    <h3>Uncompleted Tasks</h3>
    <%= render 'tasks/tasks', task_list: @tasks_uncompleted %>
  </div>
</div>

<!-- Modal -->
<%= render 'tasks/form' %>